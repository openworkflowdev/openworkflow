{
  "name": "openworkflow",
  "version": "0.5.0",
  "description": "Open-source TypeScript framework for building durable, resumable workflows",
  "keywords": [
    "durable execution",
    "durable function",
    "durable workflow",
    "job processing",
    "postgresql",
    "resumable",
    "task orchestration",
    "task scheduler",
    "typescript",
    "workflow",
    "workflow orchestration"
  ],
  "homepage": "https://openworkflow.dev",
  "bugs": "https://github.com/openworkflowdev/openworkflow/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openworkflowdev/openworkflow.git",
    "directory": "packages/openworkflow"
  },
  "license": "Apache-2.0",
  "author": "OpenWorkflow",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./internal": {
      "types": "./dist/internal.d.ts",
      "default": "./dist/internal.js"
    }
  },
  "bin": {
    "openworkflow": "./dist/bin/openworkflow.js",
    "ow": "./dist/bin/openworkflow.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "arktype": "^2.1.29",
    "valibot": "^1.2.0",
    "vitest": "^4.0.17",
    "yup": "^1.7.1",
    "zod": "^4.3.6"
  },
  "engines": {
    "node": ">=20"
  }
}
