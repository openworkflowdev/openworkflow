{
  "name": "openworkflow-project",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "ci": "npm run format && npm run build && npm run lint && npm run typecheck && npm run test:coverage",
    "format": "prettier --check . --ignore-path .gitignore --ignore-path .prettierignore",
    "format:fix": "prettier --write . --ignore-path .gitignore --ignore-path .prettierignore",
    "knip": "knip",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "ow": "tsx ./packages/cli/cli.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:browse": "open ./coverage/index.html",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "worker": "ow worker start"
  },
  "dependencies": {
    "@openworkflow/backend-postgres": "*",
    "openworkflow": "*"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^9.6.0",
    "@eslint/js": "^9.39.2",
    "@openworkflow/cli": "*",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@tsconfig/node22": "^22",
    "@tsconfig/strictest": "^2.0.8",
    "@types/node": "^25.0.10",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^62.3.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "knip": "^5.82.1",
    "prettier": "^3.8.0",
    "prettier-plugin-packagejson": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tsx": "^4.21.0",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.18"
  },
  "packageManager": "npm@11.6.2"
}
